<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="model" default="$(find raspicatv2_description)/robots/raspicatv2.urdf.xacro"/>
  <arg name="gui" default="false"/>
  <arg name="x_init_pos" default="0.0"/>
  <arg name="y_init_pos" default="-2.0"/>
  <arg name="z_init_pos" default="0.0"/>
  
  <!-- Prameters -->
  <param name="robot_description" command="$(find xacro)/xacro --inorder $(arg model)"/>
  
  <!-- Nodes -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find raspicat_navigation)config/map2gazebo/world/tsukuba.world"/>
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui" value="true"/>
    <arg name="headless" value="false"/>
    <arg name="debug" value="false"/>
  </include>

  <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf" 
    args="-urdf -model raspicatv2 -x $(arg x_init_pos) -y $(arg y_init_pos) -z $(arg z_init_pos) -param robot_description"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <include file="$(find raspicatv2_gazebo)/launch/raspicatv2_simulations.launch"/>
</launch>