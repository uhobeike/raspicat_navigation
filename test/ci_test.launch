<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="open_rviz"           default="true"/>

  <arg name="move_forward_only"   default="false"/>
  <arg name="waypoint_navigation" default="true"/>

  <arg name="world_name"          default="tsudanuma" doc="world_name type [tsudanuma_2_19, tsudanuma, tsukuba]"/>
  <arg name="mcl_map_file"        default="$(find raspicat_navigation)/config/maps/$(arg world_name)/map_$(arg world_name).yaml"/>
  <arg name="move_base_map_file"  default="$(find raspicat_navigation)/config/maps/for_move_base/map_$(arg world_name).yaml"/>
  <arg name="waypoint_yaml_file"  default="$(find raspicat_navigation)/config/waypoint/waypoint.yaml"/>
  <arg name="mcl"                 default="amcl" doc="model type [amcl, emcl2, mcl_ros]"/>

  <arg name="x_mcl"       default="-0.309"/>
  <arg name="y_mcl"       default="0.112"/>
  <arg name="a_mcl"       default="-0.013"/>

  <!-- Amcl -->
  <group if="$(eval mcl=='amcl')">
    <include file="$(find raspicat_navigation)/launch/amcl.launch">
      <arg name="initial_pose_x"  value="$(arg x_mcl)"/>
      <arg name="initial_pose_y"  value="$(arg y_mcl)"/>
      <arg name="initial_pose_a"  value="$(arg a_mcl)"/>
      <arg name="base_frame_id"   value="base_footprint"/>
    </include>
  </group>

  <!-- Map_server -->
  <node pkg="map_server" name="mcl_map_server" type="map_server" args="$(arg mcl_map_file)"/>

  <node pkg="map_server" name="move_base_map_server" type="map_server" args="$(arg move_base_map_file)">
    <remap from="map" to="/move_base_map"/>
    <remap from="static_map" to="/move_base_static_map"/>
  </node>

  <!-- Move_base -->
  <include file="$(find raspicat_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
    <arg name="raspicat_sim" value="true"/>
    <arg name="waypoint_nav" default="$(arg waypoint_navigation)"/>
    <arg name="robot_base_frame" value="base_footprint"/>
  </include>

  <!-- Raspicat speak -->
  <!-- <node pkg="raspicat_speak" type="raspicat_speak_node" name="raspicat_speak_node" 
        clear_params="true" respawn="true" output="screen">
    <rosparam command="load" file="$(find raspicat_navigation)/config/raspicat_speak/speak_list.yaml"/>
    <rosparam command="load" file="$(find raspicat_navigation)/config/raspicat_speak/voice_config.yaml"/>
  </node> -->

  <!-- Waypoint_nav -->
  <node if="$(arg waypoint_navigation)" pkg="raspicat_navigation" name="WaypointNav_node" type="WaypointNav_node" output="screen">
    <rosparam command="load" file="$(arg waypoint_yaml_file)"/>
  </node>
  
  <!-- Rviz -->
  <node if="$(arg open_rviz)" pkg="rviz" type="rviz" name="rviz" required="true"
    args="-d $(find raspicat_navigation)/config/rviz/raspicat_navigation.rviz">
  </node>      
</launch>